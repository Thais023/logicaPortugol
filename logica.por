programa
{
	
	funcao inicio()
	{
		inteiro MULTI = 7
		
		
		escreva("\t\t\t\t** TABUADA DO 3 **\n\n")
		
	para(inteiro multi = 0 ; multi <=100  ; multi+= 3){
		escreva(MULTI, "x",multi,"=", MULTI * multi, "\n")
		se ((MULTI * multi)%2 == 0){
			escreva("Este número é par")
		}
		
		
		escreva("\n\n")
	}
		
	}
}
